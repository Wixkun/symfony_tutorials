{% extends 'base.html.twig' %}

{% block title %}Tutorial{% endblock %}

{% block body %}
    <h1>Tutorial</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tutorial.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ tutorial.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ tutorial.description }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ tutorial.creationDate ? tutorial.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ tutorial.content }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_tutorial_index') }}">back to list</a>

    <a href="{{ path('app_admin_tutorial_edit', {'id': tutorial.id}) }}">edit</a>

    {{ include('admin/tutorial/_delete_form.html.twig') }}
{% endblock %}
