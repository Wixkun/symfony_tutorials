<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inscription</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 font-sans leading-normal tracking-normal">
<div class="min-h-screen flex items-center justify-center">
    <main class="w-full max-w-md mx-auto p-6">
        <!-- Header -->
        <header class="text-center mb-6">
            <a href="/" class="text-2xl font-bold text-red-600">
                Tutorials
            </a>
        </header>
        <section>
            <!-- Flash Messages -->
            <section class="mb-4">
                {% for message in app.flashes('success') %}
                    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-2" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('error') %}
                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-2" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
            </section>

            <!-- Registration Form -->
                <div class="bg-white p-8 rounded-lg shadow">
                    <h1 class="text-xl font-bold text-gray-800 text-center mb-6">Inscription</h1>
                    <form method="POST" action="{{ path('app_register') }}" class="space-y-4">
                        <!-- First Name Field -->
                        <div>
                            <input 
                                class="w-full px-4 py-3 rounded-lg bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-red-500 focus:bg-white" 
                                id="firstName" 
                                name="firstName" 
                                type="text" 
                                placeholder="Prénom" 
                                required>
                        </div>
                        <!-- Last Name Field -->
                        <div>
                            <input 
                                class="w-full px-4 py-3 rounded-lg bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-red-500 focus:bg-white" 
                                id="name" 
                                name="name" 
                                type="text" 
                                placeholder="Nom" 
                                required>
                        </div>
                        <!-- Email Field -->
                        <div>
                            <input 
                                class="w-full px-4 py-3 rounded-lg bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-red-500 focus:bg-white" 
                                id="email" 
                                name="email" 
                                type="email" 
                                placeholder="Adresse Email" 
                                required>
                        </div>
                        <!-- Username Field -->
                        <div>
                            <input 
                                class="w-full px-4 py-3 rounded-lg bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-red-500 focus:bg-white" 
                                id="username" 
                                name="username" 
                                type="text" 
                                placeholder="Nom d'utilisateur" 
                                required>
                        </div>
                        <!-- Password Field -->
                        <div>
                            <input 
                                class="w-full px-4 py-3 rounded-lg bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-red-500 focus:bg-white" 
                                id="password" 
                                name="password" 
                                type="password" 
                                placeholder="Mot de passe" 
                                required>
                        </div>
                        <!-- Confirm Password Field -->
                        <div>
                            <input 
                                class="w-full px-4 py-3 rounded-lg bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-red-500 focus:bg-white" 
                                id="repeated-password" 
                                name="repeated-password" 
                                type="password" 
                                placeholder="Confirmez votre mot de passe" 
                                required>
                        </div>
                        <!-- Submit Button -->
                        <div class="mt-6">
                            <button 
                                type="submit" 
                                class="w-full bg-red-600 text-white px-4 py-3 rounded-lg hover:bg-red-500 transition">
                                S'inscrire
                            </button>
                        </div>
                    </form>
                    <!-- Already have an account -->
                    <div class="mt-6 text-center">
                        <a href="{{ path('app_login') }}" class="text-red-600 hover:text-red-700 transition">
                            Vous avez déjà un compte ? Connectez-vous
                        </a>
                    </div>
                </div>

        </section>
    </main>
</div>
</body>

</html>
